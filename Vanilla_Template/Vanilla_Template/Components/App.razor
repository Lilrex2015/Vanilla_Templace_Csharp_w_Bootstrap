<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="css/vanilla_custom.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="Vanilla_Template.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
    <script>
        // Set theme immediately before DOM renders
        (function() {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            document.documentElement.setAttribute('data-bs-theme', savedTheme);
        })();
    </script>
</head>
<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="text/javascript">
        // Sync checkbox and handle toggle
        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            const switchCheckbox = document.getElementById('flexSwitchCheckDefault');
            if (switchCheckbox) {
                switchCheckbox.checked = savedTheme === 'light';
                switchCheckbox.addEventListener('change', (e) => {
                    const newTheme = e.target.checked ? 'light' : 'dark';
                    document.documentElement.setAttribute('data-bs-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                });
            }
        });

        // Reapply theme after Blazor navigation
        Blazor.addEventListener('enhancedload', () => {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            document.documentElement.setAttribute('data-bs-theme', savedTheme);
            const switchCheckbox = document.getElementById('flexSwitchCheckDefault');
            if (switchCheckbox) {
                switchCheckbox.checked = savedTheme === 'light';
            }
        });
    </script>
</body>
</html>